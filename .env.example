# Database Configuration (PostgreSQL)
# Asegúrate de tener PostgreSQL instalado y la base de datos creada
DB_URL=jdbc:postgresql://localhost:5432/trukeadb
DB_USERNAME=trukea
DB_PASSWORD=password

# WebSocket Mode
# simple = In-memory broker (desarrollo, una sola instancia, NO clustering)
# relay = RabbitMQ broker (producción, múltiples instancias, CON clustering)
WEBSOCKET_MODE=simple

# Mailtrap Configuration
# Copia este archivo como .env y configura tus credenciales reales
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=tu_username_mailtrap
MAIL_PASSWORD=tu_password_mailtrap

# RabbitMQ Configuration (solo necesario si WEBSOCKET_MODE=relay)
# Asegúrate de tener RabbitMQ instalado con el plugin STOMP habilitado
# Ver RABBITMQ_SETUP.md para instrucciones de instalación
# Comando: rabbitmq-plugins enable rabbitmq_stomp
RABBITMQ_HOST=localhost
RABBITMQ_STOMP_PORT=61613
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
